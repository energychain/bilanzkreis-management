# Node Environment
NODE_ENV=development

# Service Configuration
SERVICE_NAME=bilanzkreis-management
API_PORT=3000
API_HOST=0.0.0.0

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/bilanzkreis
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_AUTH_SOURCE=admin
MONGODB_REPLICA_SET=
MONGODB_SSL=false
MONGODB_SSL_CA=
MONGODB_DEBUG=false

# NATS Configuration
NATS_URL=nats://localhost:4222
NATS_USER=
NATS_PASSWORD=
NATS_TOKEN=
NATS_CLUSTER_ID=bilanzkreis-cluster
NATS_CLIENT_ID=
NATS_QUEUE_GROUP=bilanzkreis-services

# Moleculer Configuration
MOLECULER_NAMESPACE=bilanzkreis
MOLECULER_LOGGER=true
MOLECULER_LOG_LEVEL=info
MOLECULER_SERVICE_TIMEOUT=5000
MOLECULER_RETRY_COUNT=5
MOLECULER_HEARTBEAT_INTERVAL=10
MOLECULER_HEARTBEAT_TIMEOUT=30

# Authentication & Security
JWT_SECRET=your-secret-key-here
JWT_EXPIRATION=24h
AUTH_ENABLED=true
API_KEY_HEADER=X-API-KEY
TENANT_ID_HEADER=X-TENANT-ID
ADMIN_INITIAL_PASSWORD=secure-admin-password
ADMIN_EMAIL=admin@yourdomain.com

# Caching Configuration
CACHE_ENABLED=true
CACHE_TTL=600
REDIS_URI=redis://localhost:6379
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=false
LOG_FILE_PATH=logs/app.log
LOGGER_TIMESTAMP=true

# Metrics & Monitoring
METRICS_ENABLED=true
METRICS_INTERVAL=10
PROMETHEUS_PORT=9090
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6832
JAEGER_SAMPLER_TYPE=const
JAEGER_SAMPLER_PARAM=1

# Performance Tuning
MAX_PAYLOAD_SIZE=1mb
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100
CONNECTION_TIMEOUT=5000
POOL_MIN=5
POOL_MAX=50

# Feature Flags
ENABLE_AUDIT_LOG=true
ENABLE_AUTO_SETTLEMENT=true
ENABLE_REAL_TIME_UPDATES=true

# Development Tools
SWAGGER_ENABLED=true
SWAGGER_PATH=/api/documentation
DEBUG_ENABLED=false
PRETTY_PRINT=true